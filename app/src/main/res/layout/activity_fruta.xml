<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FrutaActivity">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voltar"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:linksClickable="true"
        android:layout_margin="10dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImgFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnBack"
        app:cardCornerRadius="150dp"
        >

        <ImageView
            android:id="@+id/imgFrutaGrande"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTxtNomeFruta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardImgFruta"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_alignStart="@id/cardImgFruta"
        android:layout_alignEnd="@id/cardImgFruta"

        app:cardCornerRadius="10dp"
        >

        <TextView
            android:id="@+id/txtNomeFrutaGrande"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:text="nome fruta"
            android:textSize="30dp"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>